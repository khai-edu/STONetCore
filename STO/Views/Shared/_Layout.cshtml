<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - STO</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/STO.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        @if (User.Identity!.IsAuthenticated)
        {
            <div class="row" style="justify-content: flex-end;">
                
                    <div class="col-2 text-end align-middle">
                    <span class="modal-title user_login" style="line-height: 2.5;">
                        @User.Identity.Name
                    </span></div>
                <div class="col-1 text-end">
                    <form asp-controller="Home" asp-action="Logoff">
                        <button class="but-log btn btn-danger mx-2 text-end">Вихід</button>
                    </form>
                
                </div>
            </div>
        }
        else
        {
            <form asp-action="Login">
                <div class="unibrow">
                    <button class="btn btn-info mx-2 but-log">Вхід</button>
                </div>
            </form>
        }
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">STO</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("User"))
                            {
                                <li>
                                    <a class="nav-link" asp-controller="User" asp-action="ListPlans">
                                        Навчальні плани
                                    </a>
                                </li>
                            }

                            if (User.IsInRole("Admin"))
                            {
                                <li>
                                    <a class="nav-link" asp-controller="Admin" asp-action="ListPersons">
                                        Фізичні особи
                                    </a>
                                     &nbsp;
                                </li>
                                <li>
                                    <a class="nav-link" asp-controller="Admin" asp-action="ListUsers">
                                        Користувачі
                                    </a>
                                    &nbsp;
                                </li>

                                <li>
                                    <a class="nav-link" asp-controller="Admin" asp-action="ListBrends">
                                        Бренди
                                 </a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container" style="text-align: center;">
            &copy; 2024 - STO
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
