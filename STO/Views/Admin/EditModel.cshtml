@using STO.DataTransferObjects;
@model EditModelDto;
<form method="post" class="row">
    <input asp-for="@Model.model.Id" id="model_id" hidden value="@Model.model.Id" />
    <div class="border p-3 mt-4">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2>Редагування моделі автомобілів</h2>
                <hr />
            </div>
        </div>
        <div asp-validation-summary="All"></div>

        <div class="mb-3 row p-1">
            <label class="p-0">Оберіть виробника зі списку</label>
            <select asp-for="@Model.model.BrandId" class="form-control"
                    asp-items="@Model.BrandList" id="discipline_ddl">
            </select>
        </div>        
        <div class="mb-3 row p-1">
            <label asp-for="model.Name" class="p-0"></label>
            <input asp-for="model.Name" class="form-control" />
            <span asp-validation-for="model.Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="model.Revision" class="p-0"></label>
            <input asp-for="model.Revision" class="form-control"/>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="model.Startyear" class="p-0"></label>
            <input asp-for="model.Startyear" class="form-control"/>
        </div>

         <div class="row pt-2">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-dark form-control">Зберегти</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Admin" asp-action="ListUsers" class="btn btn-outline-dark border form-control">
                    До списку моделей
                </a>
            </div>
        </div>
    </div>
</form>
